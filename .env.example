# ==============================================================================
# Flow HRIS - Environment Configuration
# ==============================================================================
# Copy this file to .env.local for development or set these in your hosting platform

# ==============================================================================
# REQUIRED - Core Supabase Configuration
# ==============================================================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SERVICE_ROLE_KEY=your-supabase-service-role-key

# ==============================================================================
# REQUIRED - Site Configuration
# ==============================================================================
NEXT_PUBLIC_SITE_URL=https://flow.upturn.com.bd
NEXT_PUBLIC_API_BASE_URL=https://flow.upturn.com.bd/api

# ==============================================================================
# REQUIRED FOR PRODUCTION - Email Configuration (SMTP)
# ==============================================================================
# Without these, password reset and email verification will NOT work
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Flow

# ==============================================================================
# OPTIONAL - SMS Configuration
# ==============================================================================
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=

# ==============================================================================
# OPTIONAL - Storage Configuration
# ==============================================================================
# Default is 'local' - use 's3' for production
STORAGE_PROVIDER=local
UPLOAD_DIR=./uploads
PUBLIC_STORAGE_URL=/uploads

# S3 Configuration (if using cloud storage)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ==============================================================================
# OPTIONAL - Maps Configuration (for attendance geolocation)
# ==============================================================================
MAPS_PROVIDER=google
MAPS_API_KEY=your-google-maps-api-key
DEFAULT_MAP_LAT=23.8103
DEFAULT_MAP_LNG=90.4125
DEFAULT_MAP_ZOOM=12

# ==============================================================================
# OPTIONAL - Cache Configuration
# ==============================================================================
REDIS_URL=redis://localhost:6379
CACHE_KEY_PREFIX=flow:

# ==============================================================================
# OPTIONAL - Logging Configuration
# ==============================================================================
LOGGING_SERVICE_URL=
LOGGING_API_KEY=

# ==============================================================================
# OPTIONAL - Security Configuration
# ==============================================================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://flow.upturn.com.bd

# ==============================================================================
# OPTIONAL - App Metadata
# ==============================================================================
NEXT_PUBLIC_APP_NAME=Flow
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Your all in one business solution
NEXT_PUBLIC_APP_AUTHOR=Upturn

# ==============================================================================
# OPTIONAL - Support Configuration
# ==============================================================================
SUPPORT_EMAIL=support@upturn.com.bd
SUPPORT_PHONE=+8801XXXXXXXXX
DOCS_URL=/docs
STATUS_PAGE_URL=

# ==============================================================================
# OPTIONAL - Feature Flags
# ==============================================================================
# Authentication features
FEATURE_SOCIAL_LOGIN=false
FEATURE_TWO_FACTOR=false
FEATURE_SSO=false

# File features
FEATURE_CLOUD_STORAGE=false
FEATURE_IMAGE_PROCESSING=false
FEATURE_VIRUS_SCANNING=false

# Notification features
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_PUSH_NOTIFICATIONS=false

# Analytics features
FEATURE_USER_TRACKING=false
FEATURE_PERFORMANCE_MONITORING=false

# Experimental features
FEATURE_AI_ASSISTANCE=false
FEATURE_ADVANCED_SEARCH=false
FEATURE_REAL_TIME_COLLABORATION=false

# ==============================================================================
# Build Information (Auto-populated during CI/CD)
# ==============================================================================
BUILD_DATE=
BUILD_COMMIT=
BUILD_BRANCH=

# ==============================================================================
# Testing (Only for test environment)
# ==============================================================================
TEST_ADMIN_EMAIL=
TEST_ADMIN_PASSWORD=
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
TEST_MANAGER_EMAIL=
TEST_MANAGER_PASSWORD=