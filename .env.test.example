# Test Environment Configuration
# Copy this file to .env.test.local and fill in your test credentials

# Base URL for testing
BASE_URL=http://localhost:3000

# Test User Credentials
# Regular user with standard permissions
TEST_USER_EMAIL=annonymous.sakibulhasan@gmail.com
TEST_USER_PASSWORD=Test@flow1234

# Admin user with full permissions
TEST_ADMIN_EMAIL=annonymous.sakibulhasan@gmail.com
TEST_ADMIN_PASSWORD=Test@flow1234

# Manager user with elevated permissions
TEST_MANAGER_EMAIL=annonymous.sakibulhasan@gmail.com
TEST_MANAGER_PASSWORD=Test@flow1234

# Test Configuration
# Timeout for tests in milliseconds
TEST_TIMEOUT=30000

# Number of retries for flaky tests
TEST_RETRIES=2

# Run tests in headed mode (true/false)
HEADED=false

# Slow down test execution (milliseconds)
SLOW_MO=0

# Browser to use (chromium, firefox, webkit)
BROWSER=chromium

# Screenshot on failure (true/false)
SCREENSHOT_ON_FAILURE=true

# Video recording (on, off, retain-on-failure)
VIDEO=retain-on-failure

# Trace recording (on, off, retain-on-failure, on-first-retry)
TRACE=on-first-retry

# Parallel workers (number or percentage)
WORKERS=50%

# Database Configuration (if needed for test data setup)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_db

# Supabase Configuration (if using Supabase)
TEST_SUPABASE_URL=https://your-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-anon-key

# API Configuration
API_BASE_URL=http://localhost:3000/api

# Feature Flags for Testing
ENABLE_EXPERIMENTAL_FEATURES=false

# Test Data Configuration
AUTO_CLEANUP_TEST_DATA=true
SEED_TEST_DATA=false

# Logging
DEBUG=false
VERBOSE=false
